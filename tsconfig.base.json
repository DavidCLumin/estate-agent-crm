{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@estate/shared/*": ["packages/shared/src/*"],
      "@estate/ui/*": ["packages/ui/src/*"],
      "@estate/db/*": ["packages/db/src/*"]
    }
  }
}
